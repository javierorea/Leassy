<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.javier.myapplication" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SenalesActivity"
            android:label="@string/menu_entry_2"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.javier.myapplication.MainActivity" />
        </activity>
        <activity
            android:name=".FrasesActivity"
            android:label="@string/menu_entry_1"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.javier.myapplication.MainActivity" />
        </activity>
        <activity
            android:name=".CategoriasActivity"
            android:label="@string/title_activity_categorias" >
        </activity>
        <activity
            android:name=".SiguienteActivity"
            android:label="@string/title_activity_siguiente"
            android:parentActivityName=".CategoriasActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.javier.myapplication.CategoriasActivity" />
        </activity>
    </application>

</manifest>
